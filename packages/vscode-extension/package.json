{
  "name": "autobe-vscode-extension",
  "private": true,
  "displayName": "AutoBe - Auto generate backend system",
  "description": "AutoBe VSCode Extension",
  "author": "Wrtn Technologies",
  "publisher": "wrtnlabs",
  "icon": "assets/icons/icon.png",
  "version": "0.18.0",
  "license": "AGPL-3.0",
  "engines": {
    "vscode": "^1.99.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/autobe-io/autobe.git"
  },
  "main": "./dist/extension.mjs",
  "scripts": {
    "vscode:prepack": "node build/copy_license.js",
    "vscode:prepublish": "pnpm run build",
    "vscode:pack": "pnpm vscode:prepack && vsce pack",
    "vscode:apply-cursor": "pnpm vscode:pack -o autobe-vscode-extension.vsix && cursor --install-extension autobe-vscode-extension.vsix",
    "vscode:apply-code": "pnpm vscode:pack -o autobe-vscode-extension.vsix && code --install-extension autobe-vscode-extension.vsix",
    "test": "vscode-test",
    "webview:build": "cd ./webview-ui && pnpm build && cd ..",
    "worker:build": "cd ./worker && pnpm build && cd ..",
    "build": "pnpm webview:build && pnpm worker:build && pnpm tsdown",
    "tsdown": "tsdown",
    "watch": "pnpm webview:build && pnpm tsdown --watch"
  },
  "devDependencies": {
    "@autobe/agent": "workspace:^",
    "@autobe/compiler": "workspace:^",
    "@autobe/interface": "workspace:^",
    "@autobe/rpc": "workspace:^",
    "@autobe/vscode-extension/interface": "workspace:^",
    "@ryoppippi/unplugin-typia": "^2.6.5",
    "@samchon/openapi": "catalog:samchon",
    "@types/node": "22.x",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "openai": "catalog:libs",
    "tgrid": "catalog:samchon",
    "ts-loader": "^9.5.2",
    "tsdown": "^0.14.0",
    "typescript": "catalog:typescript",
    "typia": "catalog:samchon"
  },
  "contributes": {
    "commands": [
      {
        "command": "autobe.configButtonClicked",
        "title": "AutoBe Config",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "autobe.configButtonClicked",
          "when": "view == autobe-vscode-extension-views",
          "group": "navigation@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autobe-vscode-extension",
          "title": "AutoBe",
          "icon": "$(beaker)"
        }
      ]
    },
    "views": {
      "autobe-vscode-extension": [
        {
          "id": "autobe-vscode-extension-views",
          "name": "AutoBe/views",
          "type": "webview"
        }
      ]
    }
  }
}
